@model IEnumerable<Category>
@{
	ViewBag.PageTitle = "Category Management";
	ViewBag.CardTitle = "All categories";
	Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<div class="mt-3 mb-3">
	<a asp-action="Create" class="btn btn-success">Create a new category</a>
</div>
<div>
	<table class="table table-hover" width="100%">
		<thead class="text-bold">
			<tr>
				<td>Name</td>
				<td>Description</td>
				<td>CreatedDate</td>
				<td>Section Actions</td>
			</tr>
		</thead>

		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.Description</td>
				<td>@item.CreatedDate</td>
				<td>
					<a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</table>
</div>