@model IEnumerable<OrderHeader>
@{
    ViewBag.PageTitle = "My Orders";
    Layout = "~/Views/Shared/_Customer.cshtml";
}

<div class="container my-5">
    <h2 class="text-center mb-4">@ViewBag.PageTitle</h2>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="mytable" class="table table-hover mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Order Status</th>
                            <th>Payment Status</th>
                            <th>Payment Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in Model)
                        {
                            <tr>
                                <td>@i.Id</td>
                                <td>@i.Name</td>
                                <td>@i.Phone</td>
                                <td>
                                    @if (i.OrderStatus == "Completed")
                                    {
                                        <span class="badge bg-success">@i.OrderStatus</span>
                                    }
                                    else if (i.OrderStatus == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">@i.OrderStatus</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@i.OrderStatus</span>
                                    }
                                </td>
                                <td>
                                    @if (i.PaymentStatus == "Paid")
                                    {
                                        <span class="badge bg-success">@i.PaymentStatus</span>
                                    }
                                    else if (i.PaymentStatus == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">@i.PaymentStatus</span>
                                    }
                                    else if(i.PaymentStatus==SD.Approve)
                                    {
                                        <span class="badge bg-success">@i.PaymentStatus</span>
                                    }
                                </td>
                                <td>@i.PaymentDate.ToString("MM/dd/yyyy")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
    </div>
</div>
